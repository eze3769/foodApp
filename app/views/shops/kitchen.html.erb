<%= render 'commons/navbar', shop:@shop%>
<%= render 'commons/sideMenu', shop:@shop %>

<div class="container">
   <ul class="orders_notes">
    <%@orders.each do |order|%>
        <li>
            
            <div class="stickynote_header" data-controller="kitchen">
                <h2>Orden #<%=order.id%>    
                    
                    
                        <%if order.status == "pendiente"  then%>
                        <span id="prepareCounter" ref='<%= order.created_at.localtime%>' data-kitchen-target="output"> 

                    </span>
                            <span class="status_pending">pendiente</span>
                        <%elsif order.status == "en preparaciÃ³n"%>
                        <span id="prepareCounter" ref='<%= order.takenByKitchen.localtime%>' data-kitchen-target="output"> 

                    </span>
                            <span class="status_preparing">preparando</span>
                        <%end%>
                    
                </h2>
            </div>    
            <div class="stickynote_body">
                <%order.items.each do |item|%>
                
                <p><%=item.quantity.to_int%> <%=item.product.name%></p>
                <%end%>
            </div>
            <div class="stickynote_footer">
                <%if (order.status == "en preparaciÃ³n" ) then%>
                    <%=link_to 'Despachar pedido', orders_update_path(:order_id => order.id), method:"post", class:'btn btn-warning'%>
                <%else%>
                    <%=link_to 'Tomar pedido',orders_update_path(:order_id => order.id), method:"post", class:'btn btn-danger'%>
                <%end%>
            </div >
            <%end%>
        </li>
    </ul>
</div>