<h1>Our Partners Shops</h1>

<%@shops.each do  |shop| %>
<div class="card" style="width: 18rem;">
  <img src="..." class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title"><%=shop.name.titleize%></h5>
    <p class="card-text"><%=shop.category.capitalize %> local</p>
     <%= link_to 'Ir al negocio', shop_show_path(shop.nick), class:"btn btn-primary" %>
  </div>
</div>

<%end%>

<%= link_to 'Registrar mi negocio', shop_new_path, class:"btn btn-danger"%>

