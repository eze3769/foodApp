

<div class="modal  fade" id="orders-modal" role="dialog" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog ">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Pedido para mesa <%=@table.name%></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
      <%if @booking == [] then%>
        <p>No hay sesiones activas en la mesa seleccionada. Por favor inicia una ;)</p>
        <%else%>
      <%= render 'ordersTable', orders:@orders, total: @subtotal, delete:'true'%>
       <%end%>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" >Cerrar</button>
      </div>
    </div>
  </div>
</div>