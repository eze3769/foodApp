

<div class="modal  fade" id="orders-modal" role="dialog" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog ">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Pedido para mesa <%=@table.name%></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
      <%if @booking == [] then%>
        <p>No hay sesiones activas en la mesa seleccionada. Por favor inicia una ;)</p>
        <%else%>
      <div class="cards-table">  
          <table class="table">
              <thead>
                <tr>
                  <th scope="col">Cant</th>
                  <th scope="col">Producto</th>
                  <%# <th scope="col">Descripci√≥n</th> %>
                  <th scope="col">Precio</th>
                  <th scope="col">Borrar</th>
                </tr>
              </thead>
              <tbody>
              <% @orders.each do |order|%>
                <tr>
                   <th scope="row"><%=order.quantity%></th>
                   <td><%=order.product.capitalize()%></td> 
              
                   <td><%=order.price%></td> 
                   <td><%=link_to 'x', orders_destroy_path(:order_id => order.id),method: 'delete', class:'btn btn-danger'%></td>
                  
                </tr>
              <%end%>
              </tbody>
            </table>
           <p>Subtotal: $<%=@subtotal%></p> 
        
     
    </div>
       <%end%>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" >Cerrar</button>
      </div>
    </div>
  </div>
</div>