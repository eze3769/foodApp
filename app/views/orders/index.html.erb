
<div class="container">
<%= form_with(url: orders_index_path(@shop.nick,:place_id), method: "get",name: "place_form") do |form|  %>
  <%= form.label :place_id, "Elegir sector:" %>
  <%= form.collection_select :place_id, @shop.places, :id, :name ,selected: @place.id, class:"form-select" %>
  <%= form.submit "Ver",class:"btn btn-primary" %>
<% end %>
<p>Descripci√≥n: <%=@place.description.capitalize()%></p>

<h2>Seleccione mesa en <%=@place.name%>:</h2>
<div class="table_list">
  <% @tables.each do |table| %>
    <div class="table_style <%=table.bookings.where(status:'open')==[] ? 'non-active-table' : 'active-table'%>" style='width:60px;height:30px'>
      <%= link_to table.name, products_list_modal_path(:place_id => @place.id, :table_id => table.id), remote: true, class:"table-link " %>
    </div>
    <%end%>
</div>


</div>
<div id="products_list"></div>
<div id="orders_list"></div>
<div id="product_info"></div>

