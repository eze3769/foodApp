<%= render 'commons/navbar', shop:@shop%>
<%= render 'commons/sideMenu', shop:@shop %>
<div class="container">
    <h1>Historial de ventas</h1>
    <%=form_with model:@filter, url: bookings_index_path, method:'get' do |form|  %>
        <div>

        </div>
    <%end%>

    <div>
        <table class="table table-striped table-hover">
             <thead>
                <tr>
                    <th scope="col">Cod.</th>
                    <th scope="col">Mesa</th>
                    <th scope="col">Fecha</th>
                    <th scope="col">Hora</th>
                    <th scope="col">Cliente</th>
                    <th scope="col">Total</th> 
                    <th scope="col"> Detalles</th>
                </tr>
            </thead>
             <tbody>
            <%@bookings.each do |booking|%>
             <tr>
                <th scope="row"><%=booking.id%></th>
                <td><%=Table.find(booking.table_id).name%></td>
                <td><%=booking.updated_at.strftime("%d/%m/%y")%></td>
                <td><%=booking.updated_at.localtime.strftime("%H:%M:%S")%></td>
                <td><%=booking.user%></td>
                <td>$<%=booking.total%></td>
                <td><%=link_to 'Ver',bookings_show_path(:booking_id => booking.id), class:"btn btn-primary"%></td>
            </tr>
            <%end%>
             </tbody>
        </table>
    </div>
    <%=link_to 'Volver', shop_admin_path, class:"btn btn-secondary" %>
</div>